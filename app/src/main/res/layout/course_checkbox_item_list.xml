<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mCheckBoxItemList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="@dimen/_5ssp"
    android:background="@drawable/course_shap"
    android:padding="@dimen/_5ssp">

    <TextView
        android:id="@+id/mCheckCourseCode"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5ssp"

        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mCheckCourseDay"
        app:layout_constraintStart_toEndOf="@+id/mCheckCourseName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mCheckCourseDay"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5ssp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mCheckCourseFromDate"
        app:layout_constraintStart_toEndOf="@+id/mCheckCourseCode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mCheckCourseToDate"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5ssp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mCheckCourseLocation"
        app:layout_constraintStart_toEndOf="@+id/mCheckCourseFromDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mCheckCourseLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5ssp"
        android:layout_marginEnd="@dimen/_2ssp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mCheckCourseToDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mCheckCourseName"


        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5ssp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mCheckCourseCode"

        app:layout_constraintStart_toEndOf="@+id/mCheckBoxCourse"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mCheckCourseFromDate"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5ssp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mCheckCourseToDate"
        app:layout_constraintStart_toEndOf="@+id/mCheckCourseDay"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/mCheckBoxCourse"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:buttonTint="@color/green1"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mCheckCourseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>